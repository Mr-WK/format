extends base.jade


mixin make_post(post)
    .post.wrapper
        if post.metadata.cover
			a(href=post.url)
            	.post_cover(style="background-image: url({{post.metadata.cover}})")
			.post_title: h2
				a(href=post.url)= post.title
        else
			.post_title: h2
            		a(href=post.url)= post.title
            .post_content.markdown= post.content.opening or post.content.limit(200, keep_images=True)

        .post_footer
            if post.tags
                .tags
                    i.fa.fa-tag
                    for tag in post.tags
                        a(role="tags",href="/tags/{{ tag }}")= tag
            .info
                i.fa.fa-clock-o
                span.date= post.date("%Y-%m-%d")

                i.fa.fa-comment-o
                a(href="{{post.url}}#comments")=  '%s Comments' % (post.comments_count or 0)

block head
	h1.site-title
        a(href="/?status=loaded") {{ site.title }}

block content
	div.m-main.layout
		+pure
			+pure(1, 1, 1, 0.708)
				.content
					div(class=wrap_class)
					for post in posts
                		+make_post(post)
            		+h.paginator(show_page_of=true,pre_label='← Newer', next_label='Older →')
			+pure(1, 1, 1, 0.291)
				aside.m-sidebar
					.sidebar-wrap
                    	.side-box
                        	h3.side-title about me
                        	.side-content
                            	if site.avatar
                                	.flip-container: .flipper
                                    	.front
                                        	img.avatar(src=site.avatar)
                                    	.back
                                        	p 你好地球人
                            	p.mt-10
                                	i.fa.fa-user
                                	span sollrei
								p.mt-10 {{ site.sub_title }}
							
                    	.side-box
                        	h3.side-title search
                        	.side-content
                            	form.search-form(action='')
                                	input.input(type='search', name='s')
                                	button(type='submit')
                                    	i.fa.fa-search
						.side-box
							h3.side-title tags
							div.side-content
								for tag_name, tag_count in site.tags
									a.side__a.tag-item(role="tags",href="/tags/{{ tag_name }}")= tag_name